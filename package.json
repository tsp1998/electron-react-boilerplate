{
  "name": "electronreact",
  "version": "1.0.0",
  "description": "",
  "main": "core/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch ./core --exec \"electron .\"",
    "dev:client": "webpack-dev-server",
    "watch": "webpack --config webpack.common.js --watch",
    "build": "webpack --config webpack.prod.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac",
    "make:win": "electron-builder --win --x64",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=public/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=x64 --icon=public/icon.ico --prune=false --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Calculator\"",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=public/icon.png --prune=false --out=release-builds"
  },
  "author": "Shubham Tandale",
  "license": "ISC",
  "build": {
    "productName": "React Electron",
    "appId": "com.er.electronreact",
    "files": [
      "build/**/*",
      "core/assets/**/*",
      "build/index.html",
      "core/main.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/logo/2.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 430,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/images/logo/2.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sass": "^1.26.10"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.2.2",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.1",
    "electron-packager": "^15.4.0",
    "electron-reload": "^1.5.0",
    "nodemon": "^2.0.13",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^4.3.1",
    "webpack-merge": "^5.1.4"
  }
}
